# ========================================
# ESG Sustainability Analysis - Environment Configuration
# ========================================
# IMPORTANT: Copy this file to .env and update with your actual values
# NEVER commit .env to Git - it's in .gitignore for security

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=esg_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# Frontend URL (change for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ========================================
# Environment Settings
# ========================================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ========================================
# Security
# ========================================
# Generate a strong secret key:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-with-command-above
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# ML Model Configuration
# ========================================
MODEL_PATH=models/esg_risk_model.joblib
MODEL_METADATA_PATH=models/esg_risk_model.meta.json

# ========================================
# MLflow (Optional - for experiment tracking)
# ========================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=esg-risk-prediction

# ========================================
# Frontend (for local development)
# ========================================
VITE_API_URL=http://localhost:8000

# ========================================
# Monitoring (Optional - for production)
# ========================================
# SENTRY_DSN=your-sentry-dsn-here

