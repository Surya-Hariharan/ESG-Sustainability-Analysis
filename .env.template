# ========================================
# ESG Sustainability Analysis - Environment Template
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=esg_db
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# ========================================
# External APIs
# ========================================
# Get your NewsAPI key from: https://newsapi.org/account
NEWS_API_KEY=your_newsapi_key_here

# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (optional, for advanced features)
OPENAI_API_KEY=

# ========================================
# Frontend URL (CORS Origins)
# ========================================
CORS_ORIGINS_STR=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ========================================
# Environment Settings
# ========================================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ========================================
# Security
# ========================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_HOSTS_STR=localhost,127.0.0.1

# ========================================
# Cache Settings
# ========================================
NEWS_CACHE_TTL=3600
AGENT_CACHE_TTL=1800

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_PER_MINUTE=100

# ========================================
# Redis Configuration (optional)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ========================================
# Auto-load CSV data on startup
# ========================================
AUTO_LOAD_ESG_CSV=1
